# MySQL Configuration for Docker
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_USER_PASSWORD=apppassword

# Database name
MYSQL_DATABASE=studying_app

# Backend Mode Configuration
# 'firestore' or 'mysql' - バックエンドの切り替え
# firestore: Firebaseを使用（サーバーレス）
# mysql: Express + MySQLを使用（従来の方式）
REACT_APP_BACKEND_MODE=firestore

# ブラウザの自動起動を無効化（複数タブが開くのを防止）
BROWSER=none

# 起動高速化設定
FAST_REFRESH=true
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true
